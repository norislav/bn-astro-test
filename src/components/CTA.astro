---
import Button from "./Button.astro";

const { heading, text, buttonText } = Astro.props.Content;
---

<section class="call-to-action section bg-primary-600">
  <div class="container">
    <div class="call-to-action__content bg-primary-500 p-10 rounded-lg text-center">
      <h2 class="call-to-action__heading text-white mb-6">
        {heading}
      </h2>
      <p class="call-to-action__text text-white mx-auto mb-8">
        {text}
      </p>
      
      <Button buttonText= `${buttonText}` buttonLink="#" buttonClass="secondary-button"/>
     
    </div>
  </div>
</section>
