---
import { Icon } from 'astro-icon/components'
---

<header>
  <!-- Top Bar -->
  <div class="bg-gray-100 py-2">
    <div class="container mx-auto flex justify-end items-center space-x-4 text-sm text-gray-700">
      <a href="/contact" class="hover:text-primary-400 font-medium">Contact Us</a>
      <a href="/resources" class="hover:text-primary-400 font-medium">Resources</a>
      <a href="tel:603-202-3423" class="hover:text-primary-400 font-medium">Call Us Now!</a>
      <a href="/verify-insurance" class="bg-accent-500 text-base-900 px-3 py-1 rounded-md hover:bg-accent-400 font-medium">
        Verify Insurance
      </a>
    </div>
  </div>

  <!-- Main Navigation Bar -->
  <div class="bg-white py-4 shadow-md">
    <div class="container mx-auto flex justify-between items-center">
      
      <!-- Logo Section -->
      <div class="flex items-center space-x-2">
        <img src="/bn-astro-test/branding/brand-north-logo-dark.svg" alt="Company Logo" class="h-10" />
      </div>
      
      <nav class="flex space-x-6 items-center">
        <!-- Dropdown 1: What We Treat -->
        <div class="relative group">
          <!-- Dropdown button with icon -->
          <button class="flex items-center text-gray-700 hover:text-blue-500 focus:outline-none py-2 font-medium">
            <span>What We Treat</span>
            <Icon name="chevron-down" class="ml-1 text-base-900 w-4 h-4" />
          </button>
      
          <!-- Dropdown menu -->
          <div class="absolute left-0 hidden group-hover:block bg-white shadow-lg border border-gray-100 z-10">
            <ul class="text-sm text-gray-700">
              <li>
                <a href="/substance-abuse" class="block px-4 py-2 hover:bg-blue-100">
                  Substance Abuse
                </a>
              </li>
              <li>
                <a href="/mental-health" class="block px-4 py-2 hover:bg-blue-100">
                  Mental Health
                </a>
              </li>
            </ul>
          </div>
        </div>


        <!-- Dropdown 2: How We Treat -->
        <div class="relative group">
          <button class="text-gray-700 hover:text-blue-500 focus:outline-none font-medium">
            How We Treat
          </button>
          <div class="absolute left-0 mt-2 hidden group-hover:block bg-white shadow-lg border border-gray-100">
            <ul class="text-sm text-gray-700">
              <li><a href="/inpatient" class="block px-4 py-2 hover:bg-blue-100">Inpatient</a></li>
              <li><a href="/outpatient" class="block px-4 py-2 hover:bg-blue-100">Outpatient</a></li>
            </ul>
          </div>
        </div>

        <!-- Basic Link: About Us -->
        <a href="/about-us" class="text-gray-700 hover:text-blue-500 font-medium">About Us</a>

        <!-- Basic Link: Contact -->
        <a href="/contact" class="text-gray-700 hover:text-blue-500 font-medium">Contact</a>
      </nav>
    </div>
  </div>
</header>
