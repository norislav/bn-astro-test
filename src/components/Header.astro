---
import { Icon } from 'astro-icon/components'
import Data from '../content/general/general.json';


---

<header>
  <!-- Top Bar -->
  <div class="bg-gray-100 py-2">
    <div class="container mx-auto flex justify-end items-center space-x-4 text-sm text-gray-700">
      <a href="/contact" class="hover:text-primary-400 font-medium">Contact Us</a>
      <a href="/resources" class="hover:text-primary-400 font-medium">Resources</a>
      <a href="tel:603-202-3423" class="hover:text-primary-400 font-medium">{Data.phoneNumber}</a>
      <a href="/verify-insurance" class="top-header__link header-btn">
        Verify Insurance
      </a>
    </div>
  </div>

  <!-- Main Navigation Bar -->
  <div class="bg-white py-4 shadow-md">
    <div class="container mx-auto flex justify-between items-center">
      
      <!-- Logo Section -->
      <div class="flex items-center space-x-2">
        <a href="/bn-astro-test/">
          <img src="/bn-astro-test/branding/brand-north-logo-dark.svg" alt="Company Logo" class="h-10" />
        </a>
      </div>
      
      <nav class="flex space-x-6 items-center">

        <!-- Dropdown: How We Treat -->
        <div class="relative group">
          <button class="flex items-center text-gray-700 hover:text-blue-500 focus:outline-none font-medium py-2">
           <span>How We Treat</span>
            <Icon name="chevron-down" class="ml-1 text-base-900 w-4 h-4" />
          </button>
          <div class="absolute left-0 hidden group-hover:block bg-white shadow-lg border border-gray-100 rounded-md">
            <ul class="text-sm text-gray-700">
              <li><a href="/bn-astro-test/program" class="dropdown__link flex px-4 py-2 hover:bg-blue-100">Residential Detox</a></li>
            </ul>
          </div>
        </div>

        <!-- Basic Link: About Us -->
        <a href="/about-us" class="text-gray-700 hover:text-blue-500 font-medium">About Us</a>

        <!-- Basic Link: Contact -->
        <a href="/contact" class="text-gray-700 hover:text-blue-500 font-medium">Contact</a>
      </nav>
    </div>
  </div>
</header>

<style>

.top-header__link.header-btn{
  @apply bg-accent-500 px-3 text-black py-1 rounded-md hover:bg-accent-400 font-medium ;
}

.dropdown__link{
  @apply text-nowrap py-3 px-4 font-medium;
}

  </style>