---
const { heading, text, buttonText, images } = Astro.props.Content;
---

<section class="facility-section py-16 bg-gray-100">
  <div class="container mx-auto px-4 grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
    
    <!-- Left Column: Full-Height Image -->
    <div class="facility-image-left h-full">
      <img src={images.imageOne} alt="Facility Image 1" class="object-cover w-full h-full rounded-lg shadow-md" />
    </div>

    <!-- Right Column: Content and Image -->
    <div class="facility-content space-y-12">
      <!-- Heading and Description -->
      <div class="">
        <h2 class="facility-heading mb-4">{heading}</h2>
        <p class="facility-description text-lg mb-6">{text}</p>
        <a href="#" class="facility-button bg-primary-500 text-white py-3 px-6 rounded-md font-bold">
          {buttonText}
        </a>
      </div>

      <!-- Second Image (below the text and button) -->
      <div class="facility-image-bottom">
        <img src={images.imageTwo} alt="Facility Image 2" class="object-cover w-full h-96 rounded-lg shadow-md" />
      </div>
    </div>
  </div>
</section>
