---
import { Icon } from 'astro-icon/components'
import Button from '../Button.astro';
import Form from '../Form.astro';
const { heading, text, features } = Astro.props.Content;
const GeneralData = Astro.props.GeneralData;
---

<!-- Hero Section HTML with Tailwind CSS -->
<section class="bg-gradient-to-b from-primary-200 to-primary-600 text-base-100 hero-section">
    <div class="container flex flex-col md:flex-row justify-between items-center">
      
      <!-- Left Content -->
      <div class="md:w-7/12 mb-8 md:mb-0">
        <!-- Location -->
        <p class="text-accent-500 text-xl mb-4 flex items-center gap-1">
            <Icon name="location" class="h-6 w-6 text-primary" />
          Boca Raton, FL
        </p>
  
        <!-- Heading -->
        <h1 class="mb-4 max-w-2xl ">{heading} {GeneralData.city}, {GeneralData.state}</h1>
  
        <!-- Subheading and Features List -->
        <p class="mb-8 text-2xl">{text}</p>
        <ul class="list-disc list-inside mb-8 space-y-1 lg:text-lg md:text-md sm:text-sm font-medium">
          {Object.values(features).map((feature) => (
            <li>{feature}</li>
          ))}
        </ul>
  
        <!-- Call to Action Button -->
        <Button buttonText= {`Call Us Now! ${GeneralData.phoneNumber}`} buttonLink="#" buttonClass="secondary-button"/>
      </div>
  
      <!-- Right Content: Form -->
      <div class="md:w-5/12 bg-white p-8 rounded-lg shadow-lg text-black">
        <h2 class="text-xl font-bold mb-4 text-black">Check Coverage</h2>
        <Form />
       
      </div>
    </div>
  </section>
  