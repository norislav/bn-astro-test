---
// Define props for the component, such as video link, heading, description, and button text
const { heading, text, videoLink } = Astro.props.Content;
const { phoneNumber } = Astro.props.GeneralData;
---

<section class="hero-video bg-gray-300 py-16 px-8">
  <div class="container mx-auto grid grid-cols-1 md:grid-cols-2 items-center gap-8">
    <!-- Left Column: Text and Buttons -->
    <div class="hero-video__content">
      <h1 class="">{heading}</h1>
      <p class="">
        {text}
      </p>

      <div class="flex space-x-4">
        <!-- Button 1 -->
        <a href="#" class="bg-gray-500 text-white py-3 px-6 rounded-md shadow hover:bg-gray-600">
          Get Started
        </a>

        <!-- Button 2 -->
        <a href={`tel:${phoneNumber}`} class="border border-gray-500 text-gray-700 py-3 px-6 rounded-md shadow hover:bg-gray-200">
          Call now {phoneNumber}
        </a>
      </div>
    </div>

    <!-- Right Column: Video Placeholder or Video Embed -->
    <div class="hero-video__media bg-gray-100 w-full aspect-video rounded-lg flex items-center justify-center">
      <!-- Video Link or Play Button -->
      <a href={videoLink} class="flex items-center justify-center w-full h-full">
        <div class="w-20 h-20 bg-white rounded-full flex items-center justify-center shadow-lg">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M14.752 11.168l-3.197-1.066a1 1 0 00-1.106.173l-2.75 2.75a1 1 0 000 1.414l2.75 2.75a1 1 0 001.106.173l3.197-1.066A1 1 0 0016 15.832V8.168a1 1 0 00-1.248-.832z" />
          </svg>
        </div>
      </a>
    </div>
  </div>
</section>

<style>
  .hero-video {
    background-color: #d1d5db; /* Tailwind gray-300 */
  }

  .hero-video__media {
    background-color: #f3f4f6; /* Tailwind gray-100 */
  }

  .hero-video__content h1 {
    color: #000000; /* Black for heading */
  }

  .hero-video__content p {
    color: #4b5563; /* Tailwind gray-700 */
  }
</style>
