---
import IconCard from '../ui/IconCard.astro';

const { heading, description, services } = Astro.props.Services;
---

<section class="services-section py-16 bg-gray-100">
  <div class="container flex flex-col items-center mx-auto px-4 text-center">
    <h2 class="services-section__heading mb-4">{heading}</h2>
    <p class="services-section__description text-lg mb-12">
      {description}
    </p>

    <div class="services-section__grid grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((service) => (
        <IconCard 
          iconName={service.iconName} 
          title={service.title} 
          description={service.description} 
        />
      ))}
    </div>
  </div>
</section>
