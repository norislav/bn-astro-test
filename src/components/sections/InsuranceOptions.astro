---
import { Image } from "@unpic/astro";
import Button from "../Button.astro";
---

<section class="section bg-gray-100">
    <div class="container flex flex-col items-center gap-4">
      <h2 class="insurance-options__heading mb-4">Insurance Options</h2>
      <p class="insurance-options__description text-center mb-12">
        Brand North accepts most major insurance plans and offers flexible, affordable self-pay options to accommodate different financial situations.
      </p>
  
      <!-- Logo Grid -->
      <div class="insurance-options__grid flex flex-row flex-wrap justify-center sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4 mb-8">
        
        <!-- Logo 1 -->
        <div class="insurance-logo">
          <img src="/bn-astro-test/imgs/logoipsum.png" alt="Insurance Logo 1" class="mx-auto" />
        </div>
  
        <!-- Logo 2 -->
        <div class="insurance-logo">
          <img src="/bn-astro-test/imgs/logoipsum.png" alt="Insurance Logo 2" class="mx-auto" />
        </div>
  
        <!-- Logo 3 -->
        <div class="insurance-logo">
          <img src="/bn-astro-test/imgs/logoipsum.png" alt="Insurance Logo 3" class="mx-auto" />
        </div>
  
        <!-- Logo 4 -->
        <div class="insurance-logo">
          <img src="/bn-astro-test/imgs/logoipsum.png" alt="Insurance Logo 4" class="mx-auto" />
        </div>
  
        <!-- Logo 5 -->
        <div class="insurance-logo">
          <img src="/bn-astro-test/imgs/logoipsum.png" alt="Insurance Logo 5" class="mx-auto" />
        </div>
  
        <!-- Logo 6 -->
        <div class="insurance-logo">
          <img src="/bn-astro-test/imgs/logoipsum.png" alt="Insurance Logo 6" class="mx-auto" />
        </div>
  
        <!-- Logo 7 -->
        <div class="insurance-logo">
          <img src="/bn-astro-test/imgs/logoipsum.png" alt="Insurance Logo 7" class="mx-auto" />
        </div>
  
        <!-- Logo 8 -->
        <div class="insurance-logo">
          <img src="/bn-astro-test/imgs/logoipsum.png" alt="Insurance Logo 8" class="mx-auto" />
        </div>
  
        <!-- More Indicator -->
        <div class="insurance-logo text-white text-left flex justify-center p-4">
          <span class="text-xl font-bold">+38 MORE</span>
        </div>
      </div>
  
      <!-- Call to Action -->
      <Button buttonText= "Call us now!" buttonLink="#" buttonClass="secondary-button uppercase"/>
      
    </div>
