---
import ImageCard from '../ui/ImageCard.astro';
const { heading, text, programs } = Astro.props.Programs;
---

<section class="program-cards bg-gray-50 py-16">
  <div class="container flex flex-col items-center mx-auto px-4">
    <h2 class="program-cards__heading text-center mb-8">
      {heading}
    </h2>
    <p class="program-cards__subheading text-gray-700 text-center mb-12">
      {text}
    </p>
    <div class="program-cards__grid">
      {programs.map((program) => (
        <ImageCard 
          title={program.title} 
          description={program.description} 
          image={program.image} 
        />
      ))}
    </div>
  </div>
</section>


<style>
  .program-cards__grid{
    @apply grid gap-8 lg:grid-cols-3;
  }
</style>