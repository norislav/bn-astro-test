---
const { heading, text, buttonText, list } = Astro.props.Content;
---

<section class="sticky-content py-16">
  <div class="container mx-auto px-4 grid grid-cols-1 md:grid-cols-2 gap-16 items-start">
    
    <!-- Left Column: Introduction and Button -->
    <div class="sticky-content__intro p-8 md:sticky top-10">
      <h2 class="mb-8">{heading}</h2>
      <p class="text-lg mb-6">
        {text}
      </p>
      <a href="" class="inline-block text-primary-500 bg-accent-500 py-3 px-6 font-bold rounded-md shadow-lg">
        {buttonText}
      </a>
    </div>

    <!-- Right Column: List of Therapies -->
    <div class="sticky-content__list space-y-12">
      
      {list.map((item, index) => (
        <div class="therapy-item flex items-start">
          <span class="therapy-item__number mr-4">{index + 1}.</span>
          <div>
            <h3 class="therapy-item__title mb-4">{item.title}</h3>
            <p class="therapy-item__description">
              {item.description}
            </p>
          </div>
        </div>
      ))}
      
    </div>
  </div>
</section>
