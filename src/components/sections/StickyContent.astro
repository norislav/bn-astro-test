---
import Button from "../Button.astro";

const { heading, text, buttonText, list } = Astro.props.Content;
---

<section class="section">
  <div class="container grid grid-cols-1 md:grid-cols-2 gap-16">
    
    <!-- Left Column: Introduction and Button -->
    <div class="sticky-content__intro h-max p-8 md:sticky top-10 flex flex-col gap-8 items-start">
      <h2 class="">{heading}</h2>
      <p class="text-lg ">
        {text}
      </p>
      <Button buttonText=`${buttonText}` buttonLink="#" buttonClass="secondary-button"/>
    </div>

    <!-- Right Column: List of Therapies -->
    <div class="sticky-content__list space-y-12">
      
      {list.map((item, index) => (
        <div class="therapy-item flex items-start">
          <span class="therapy-item__number mr-4">{index + 1}.</span>
          <div>
            <h3 class="therapy-item__title mb-4">{item.title}</h3>
            <p class="therapy-item__description">
              {item.description}
            </p>
          </div>
        </div>
      ))}
      
    </div>
  </div>
</section>
