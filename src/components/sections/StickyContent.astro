  <style>
    .sticky-content__list {
      counter-reset: therapy-counter; 
    }

    .therapy-item__title{
      @apply lg:text-4xl md:text-3xl;
    }
    .therapy-item__description{
      @apply text-xl;
    }

    .therapy-item__number {
      counter-increment: therapy-counter;
      font-weight: bold;
      @apply text-2xl;
    }

    .therapy-item__number::before {
      content: counter(therapy-counter, decimal-leading-zero) "."; 
    }
  </style>
  