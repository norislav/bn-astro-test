---
// BlogCard.astro

interface Props {
  title: string;
  date: string;
  readTime: string;
  description: string;
  featuredImg: string;
  link: string;
}

const { title, readTime, description, featuredImg, link, date } = Astro.props as Props;

---

<div class="blog-card relative bg-white rounded-lg shadow-md overflow-hidden">
  <img src={featuredImg} alt={title} class="object-cover w-full h-48" />
  <div class="p-8">
    <div class="flex items-center gap-2 text-sm text-gray-500 mb-2">
      <span class="category">{date}</span>
      <span>•</span>
      <span>{readTime}</span>
    </div>
    <h3 class="text-2xl text-left font-semibold mb-2">{title}</h3>
    <p class="text-left text-gray-700 mb-4">
      {description}
    </p>
    <a href={link} class="text-primary-500 font-medium hover:underline flex items-center gap-1 clickable-parent">
      READ MORE <span>→</span>
    </a>
  </div>
</div>
