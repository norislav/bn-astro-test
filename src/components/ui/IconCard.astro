---
import { Icon } from 'astro-icon/components';

interface Props {
  iconName: string;
  title: string;
  description: string;
}

const { iconName, title, description } = Astro.props as Props;
---

<div class="icon-card bg-gray-200 space-y-6 p-4 sm:p-6 md:p-8 rounded-lg shadow-lg">
  <div class="icon-card__icon mb-4">
    <Icon name={iconName} class="w-20 h-20 text-gray-500 mx-auto" />
  </div>
  <h3 class="icon-card__title text-2xl text-center  font-semibold mb-2">{title}</h3>
  <p class="icon-card__description text-gray-700">
    {description}
  </p>
</div>


