---
interface Props {
  title: string;
  description: string;
  image: string;
}

const { title, description, image } = Astro.props as Props;
---

<div class="image-card bg-gray-200 rounded-lg overflow-hidden shadow-lg flex flex-col">
  <div class="image-card__img flex justify-center">
    <img src={image} alt={title} class="w-full h-auto" />
  </div>
  <div class="image-card__content p-6">
    <h3 class="image-card__title text-2xl font-semibold text-gray-800 mb-4">
      {title}
    </h3>
    <p class="image-card__description text-gray-600">
      {description}
    </p>
  </div>
</div>

<style>
      .image-card{
    grid-column: span 1; /* Each item spans 1 column by default */
  }
  /* Dealing with single orphan */
  .image-card:last-child:nth-child(2n - 1) {
    grid-column-end: 4; /* Center the last single orphan item */
  }
</style>