---
import AboutData from '../content/pages/about.json';
import HomeData from '../content/pages/home.json';
import GeneralData from '../content/general/general.json';

import MainLayout from "../layouts/MainLayout.astro"

import Hero from '../components/layout/Hero.astro';
import AboutSection from "../components/sections/About.astro";
import ProgramCards from "../components/sections/ProgramCards.astro";
import StickyContent from "../components/sections/StickyContent.astro";
import FAQ from "../components/sections/FAQ.astro";
import Map from "../components/Map.astro";
import Facility from '../components/sections/Facility.astro';
import Team from '../components/Team.astro';

---

<MainLayout title="About" description="Alcohol and Drug Rehab in Boca Raton, Florida">
	<Hero Content={AboutData.hero} GeneralData={GeneralData}/>
	<AboutSection Content={AboutData.about}/>
	<StickyContent Content={AboutData.coreValues}/>
    <Team />
    <Facility Content={AboutData.facility}/>
    <ProgramCards Content={HomeData.programs}/>
    <AboutSection Content={AboutData.approach}/>
	<Map />
	<FAQ />
</MainLayout>