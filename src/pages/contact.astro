---
import { Icon } from "astro-icon/components";
import Form from "../components/Form.astro";
import Map from "../components/Map.astro";
import Hero from "../components/layout/Hero.astro";
import MainLayout from "../layouts/MainLayout.astro";
import Data from '../content/general/general.json';

const ContactHeroData = {
    heading: "Contact Us",
    text: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus ex dui, faucibus ac euismod in, tristique sed nulla. Duis porta finibus lacus non aliquet.",
};

const GeneralData = {
    phone: "123-456-7890",
};
---

<MainLayout title="Contact Us">
    <Hero Content={ContactHeroData} GeneralData={GeneralData} />

    <!-- Form Section -->

    <section class="section bg-base-50">
        <div class="container program-hero__container items-center !gap-20">
            <div class="flex-none space-y-5 px-4 md:px-0 gap-5">
                <h1 class="!font-normal !leading-tight">Contact Us</h1>
                <p>
                    [Placeholder Company Name] is a dynamic and innovative
                    organization dedicated to delivering top-notch products and
                    services. We specialize in [industry/sector], offering
                    solutions that drive growth and enhance the customer
                    experience. Our commitment to excellence and a
                    customer-centric approach sets us apart as a leader in the
                    market. At [Placeholder Company Name], we believe in
                    innovation, quality, and integrity, striving to meet and
                    exceed our clientsâ€™ expectations every step of the way.
                </p>
                <div
                    class="items-center gap-x-3 space-y-3 sm:flex sm:space-y-0"
                >
                </div>
            </div>
            <div class="flex-none mt-14 md:mt-0 bg-white p-10 rounded-xl">
                <!-- Form  -->
                <Form />
            </div>
        </div>
    </section>

    <!-- Contact Box  -->

    <section class="section !pt-0 bg-base-50">
        <div class="container grid lg:grid-cols-3 md:grid-cols-2 grid-cols-1 gap-8">
            <div class="flex flex-col items-center p-8 bg-white rounded-md contact-icon-card">
                <div class="w-12 h-12 flex items-center justify-center rounded-full bg-primary-500 mb-3">
                <Icon name="phone" class="text-xl text-white " /></div>
                <span class="mb-5 text-xl font-medium text-primary-500">Phone Number</span>
                <a class="text-black text-center font-medium" href={`tel:${Data.phoneNumber}`}>{Data.phoneNumber}</a>
            </div>   
            <div class="flex flex-col items-center p-8 bg-white rounded-md contact-icon-card">
                <div class="w-12 h-12 flex items-center justify-center rounded-full bg-primary-500 mb-3">
                <Icon name="location" class="text-xl text-white " /></div>
                <span class="mb-5 text-xl font-medium text-primary-500">Address</span>
                <a class="text-black text-center font-medium" href="#">{Data.address}</a>
            </div>   
            <div class="flex flex-col items-center p-8 bg-white rounded-md contact-icon-card">
                <div class="w-12 h-12 flex items-center justify-center rounded-full bg-primary-500 mb-3">
                <Icon name="icon-mail" class="text-xl text-white " /></div>
                <span class="mb-5 text-xl font-medium text-primary-500">Email Address</span>
                <a class="text-black text-center font-medium" href={`mailto:${Data.Email}`}>{Data.Email}</a>
            </div>   
            
         
        </div>
    </section>

    <!-- Map -->
     <Map  />

</MainLayout>
